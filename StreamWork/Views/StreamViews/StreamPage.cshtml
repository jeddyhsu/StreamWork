@model StreamWork.ViewModels.StreamPageViewModel
@{ ViewData["Title"] = "StreamPage";}

@if(Model.StudentUserProfile == null) {Layout = "_LayoutTutorNavbar";}
else { Layout = "_LayoutStudentNavbar"; }

<link rel="stylesheet" href="~/css/Streams.css" />

<div class="container-fluid">
    <div class="row" style="background-color:whitesmoke; position:absolute; height: calc(100% - 100px); width:100%;">
        <div class="d-flex flex-column col-lg-8 col-md-12 col-sm-12 col-12 p-0 border-right" style="overflow:scroll">
            <iframe style=" width:100%; height:100%;" class="p-0" src="https://c.streamhoster.com/embed/media/WxsdDM/mAe0epZsixC/@Model.UserChannel.ChannelKey.Split('|')[0]" frameborder="0" scrolling="no" allow="autoplay" allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="mt-2" id="StreamInfo">
                            <h3 style="color:black; font-family:'Roboto Slab', serif;">@Model.UserChannel.StreamTitle<span></span></h3>
                            <p class="mb-0">@Model.UserChannel.StreamDescription</p>
                            <p style="font-size:12px">Tutoring @Model.UserChannel.StreamSubject</p>
                        </div>
                    </div>
                </div>
                <div class="row border-top" style="padding-top:0px">
                    <div class="col-lg-6  col-md-6 col-sm-8 col-12" style="margin-top:10px">
                        <input align="left" type="image" class="rounded" style="width:30px" src=@Model.TutorStreamingUserProfile.ProfilePicture />
                        <h3 class="mb-0" style="font-family:'Roboto Slab', serif; font-size:20px; margin-left:40px; color:@Model.UserChannel.ChatColor">@Model.TutorStreamingUserProfile.Name.Replace('|', ' ')</h3>
                        <p style="margin-left:40px">@Model.TutorStreamingUserProfile.ProfileCaption</p>
                    </div>
                    <div class="inline-block m-2 ml-auto">
                        @if (Model.StudentUserProfile != null || Model.TutorUserProfile != null)
                        {
                            @if ((Model.IsUserFollowingThisTutor == false && Model.StudentUserProfile != null && Model.StudentUserProfile.Username != Model.TutorStreamingUserProfile.Username) || (Model.IsUserFollowingThisTutor == false && Model.TutorUserProfile != null && Model.TutorUserProfile.Username != Model.TutorStreamingUserProfile.Username))
                            {
                                <button id="FollowButton" type="button" style="width:100%; font-family:'Roboto Slab', serif; font-size:16px; width:100px" class="streamWorkSecondary mb-2 mr-1" onclick="FollowStreamTutor('@Model.TutorStreamingUserProfile.Id')">Follow</button>
                                <button id="UnfollowButton" type="button" style="width:100%; display:none; font-family:'Roboto Slab', serif; font-size:16px; width:110px" class="streamWorkGrey mb-2 mr-1" onclick="UnfollowStreamTutor('@Model.TutorStreamingUserProfile.Id')">Followed</button>
                            }
                            else if ((Model.IsUserFollowingThisTutor == true && Model.StudentUserProfile != null) || (Model.IsUserFollowingThisTutor == true && Model.TutorUserProfile != null))
                            {
                                <button id="FollowButton" type="button" style="width:100%; display:none;font-family:'Roboto Slab', serif; font-size:16px; width:100px" class="streamWorkSecondary mb-2 mr-1" onclick="FollowStreamTutor('@Model.TutorStreamingUserProfile.Id')">Follow</button>
                                <button id="UnfollowButton" type="button" style="width:100%; font-family:'Roboto Slab', serif; font-size:16px; width:110px" class="streamWorkGrey mb-2 mr-1" onclick="UnfollowStreamTutor('@Model.TutorStreamingUserProfile.Id')">Followed</button>
                            }
                        }
                        <button class="streamWorkGold mb-2 mr-1" style="font-family:'Roboto Slab', serif; cursor: pointer; font-size:16px; width:100px" onclick="window.open('https://www.streamwork.live/Home/Donate?tutor=@Model.UserChannel.Username')">Donate</button>
                        <button class="streamWorkPrimary mb-2 mr-1" style="font-family:'Roboto Slab', serif; cursor: pointer; font-size:16px; width:100px" onclick="window.open('https://www.streamwork.live/Home/ProfileView?Tutor=@Model.TutorStreamingUserProfile.Username')">Profile</button>
                    </div>
                </div>
            </div>
        </div>
        <div  class="d-flex flex-column col-lg-4 col-md-12 col-sm-12 col-12 p-0">
            <iframe class="chatBoxHeight" src="https://www.streamwork.live/chat/streamworkchat?chatId=@Model.UserChannel.Username"></iframe>
        </div>
    </div>
</div>

<div id="submitRecommendationModal" class="modal" tabindex="-2" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: whitesmoke;">
            <div class="modal-header">
                <h5 class="modal-title" style="color: black;">Submit a Recommendation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <textarea align="middle" class="form-control" id="submitRecommendationText" style="height:200px;" placeholder="Recommendation"></textarea>
                </form>
            </div>
            <div class="modal-footer">
                <button class="streamWorkGrey" data-dismiss="modal">Exit</button>
                @if (Model.StudentUserProfile == null)
                {
                    <button class="streamWorkPrimary" data-dismiss="modal" onclick="submitRecommendation('Anonymous', '@Model.UserChannel.Username')">Submit</button>
                }
                else
                {
                    <button class="streamWorkPrimary" data-dismiss="modal" onclick="submitRecommendation('@Model.StudentUserProfile.Username', '@Model.UserChannel.Username')">Submit</button>
                }
            </div>
        </div>
    </div>
</div>

<script>$(document).ready(function () {
        $("#nav").click(function () {
            $("#navbarText").slideToggle();
        });
    });
    </script>
