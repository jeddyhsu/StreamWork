@model StreamWork.ViewModels.StreamPageViewModel
@{ ViewData["Title"] = "StreamPage";}

<link rel="stylesheet" href="~/css/Streams.css" />

<div class="container-fluid" style="background-color:black; height:100%">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-9 p-0">
            <iframe style="height:700px; width:100%" class="p-0" src="//iframe.dacast.com/b/135034/c/@Model.UserChannel.ChannelKey" frameborder="0" scrolling="no" allow="autoplay" allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
            <div class="">
                <img class="ml-2 mb-2" src=@Model.UserChannel.ProfilePicture style="width:115px; height: 150px; border-radius:5%; float:left; margin-right:10px" />
                <h2 class="mt-1" style="color:white; font-family:'Roboto Slab', serif;">@Model.UserChannel.StreamTitle<span></span></h2>
                <h1 class="card-title" style=" font-size:12px; color:lightgray"><b>@Model.UserChannel.Username</b></h1>
                <a target="_blank" rel="noopener noreferrer" href="/Home/Donate?tutor=@Model.UserChannel.Username">
                    <img src="~/images/donate201911.png" target="_blank" rel="noopener noreferrer" style="width:100px; height:auto" />
                </a>

            </div>
            @if(Model.UserProfile != null){
                if (Model.IsUserFollowingThisTutor == false && Model.UserProfile.ProfileType == "student")
                {
                    <button id="FollowButton" type="button" style="font-size:12px" class="btn btn-primary mt-3" onclick="FollowStreamTutor('@Model.UserChannel.Id')">Follow StreamTutor</button>
                    <button id="UnfollowButton" type="button" style="font-size:12px; display:none" class="btn btn-primary mt-3" onclick="UnfollowStreamTutor('@Model.UserChannel.Id')">Unfollow StreamTutor</button>
                }
                else if (Model.IsUserFollowingThisTutor == true && Model.UserProfile.ProfileType == "student")
                {
                    <button id="FollowButton" type="button" style="font-size:12px;display:none" class="btn btn-primary mt-3" onclick="FollowStreamTutor('@Model.UserChannel.Id')">Follow StreamTutor</button>
                    <button id="UnfollowButton" type="button" style="font-size:12px" class="btn btn-primary mt-3" onclick="UnfollowStreamTutor('@Model.UserChannel.Id')">Unfollow StreamTutor</button>
                }
            }
        </div>
        <div class="col-sm-12 col-md-12 col-lg-3 p-0 m-0">
            <iframe class="p-0" src=@Model.ChatBox style="width:100%; height:100vh; " allowtransparency="yes" allow="autoplay" frameborder="0" marginheigh="0" marginwidth="0" scrolling="auto"></iframe>
        </div>
    </div>
</div>

<script>
$(document).ready(function () {
    $("#nav").click(function () {
        $("#navbarText").slideToggle();
    });
});
</script>