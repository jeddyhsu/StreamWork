@model StreamWork.ViewModels.TutorDashboardViewModel

@{Layout = "_LayoutNoNavbar";}
@{ViewData["Title"] = "TutorDashboard";}
<script src="~/js/TutorJS/TutorDashboard.js" asp-append-version="true"></script>
<link rel="stylesheet" href="~/css/Tutor/TutorDashboard.css" asp-append-version="true" />

<div class="container-fluid mr-0 containerFluid">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light navBar">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="navItem nav-link pl-3 pr-3" href="#">Tutor</a>
                    </li>
                    <li class="nav-item active">
                        <a class="navItem nav-link pl-3 pr-3" href="#">Browse</a>
                    </li>
                    <li class="nav-item active">
                        <a class="navItem nav-link pl-3 pr-3" href="#">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="container-fluid pt-4">
        <div class="card">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-1 order-md-2 order-sm-2 order-2 pr-2">
                    <div class="p-4 mb-4">
                        <input align="left" class="rounded" type="image" src="~/images/GenericAssets/DefaultProfilePicture.png" style="width:80px;" />
                        <h5 style="padding-left:100px; padding-top:10px; font-family:'Roboto Slab', serif; color: #707070">First Last</h5>
                        <p class="pt-0" style="padding-left:100px; font-family:'Roboto Slab', serif; font-size:12px; color: #9F9F9F">Major / Concentration</p>
                    </div>
                    <div class="pl-4 mb-4">
                        <div class="d-inline-block mr-2">
                            <div class="card pr-2" style="background-color:#004643; color:white">
                                <h6 class="m-0 pt-2 pb-2" style="font-size:9px; word-spacing:8px"><span style="background-color:#003936; font-size:14px" class="p-2 rounded">1000</span> Streams</h6>
                            </div>
                        </div>
                        <div class="d-inline-block mr-2">
                            <div class="card pr-2" style="background-color:#FFC627; color:white">
                                <h6 class="m-0 pt-2 pb-2" style="font-size:9px; word-spacing:8px"><span style="background-color:#E6B62F; font-size:14px" class="p-2 rounded">1000</span> Followers</h6>
                            </div>
                        </div>
                        <div class="d-inline-block mr-2">
                            <div class="card pr-2" style="background-color:#7266BA; color:white">
                                <h6 class="m-0 pt-2 pb-2" style="font-size:9px; word-spacing:8px"><span style="background-color:#5C50A7; font-size:14px" class="p-2 rounded">1000</span> Views</h6>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-2 order-md-1 order-sm-1 order-1">
                    <img src="~/images/TutorAssets/TutorDashboard/PlaceHolderBanner.png" style="width:100%; height:100%" />
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-4">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true" onclick="SliderProfile()">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="schedule-tab" data-toggle="tab" href="#schedule" role="tab" aria-controls="schedule" aria-selected="false" onclick="SliderSchedule()">Schedule</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="stream-tab" data-toggle="tab" href="#stream" role="tab" aria-controls="stream" aria-selected="false" onclick="SliderStream()">Stream</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="comment-tab" data-toggle="tab" href="#comment" role="tab" aria-controls="comment" aria-selected="false" onclick="SliderComment()">Comment</a>
            </li>
        </ul>
        <div class="slider">
            <div id="sliderObject" class="sliderObject"></div>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="profile" role="tabpanel" aria-labelledby="profile-tab">Profile</div>
            <div class="tab-pane" id="schedule" role="tabpanel" aria-labelledby="schedule-tab">Schedule</div>
            <div class="tab-pane" id="stream" role="tabpanel" aria-labelledby="stream-tab">Stream</div>
            <div class="tab-pane" id="comment" role="tabpanel" aria-labelledby="comment-tab">Comment</div>
        </div>
    </div>
</div>


<div class="wrapper">
    <nav id="sidebar">
        <img class="logoSize" onclick="window.location.href ='/Home/Index" src="~/images/WhiteStreamWork.png" />
        <ul class="p-0">
            <li class="navList" onclick="window.location.href ='/Tutor/TutorStream'">Start Stream</li>
            <li class="navList" onclick="window.location.href ='/Tutor/HowToStream'">How To Stream</li>
            <li class="navList" onclick="window.location.href ='/Tutor/TutorWatch'">Watch Streams</li>
            <li class="navList">Following List</li>
            <li class="navList">Follower List</li>
        </ul>
    </nav>
</div>
