@model StreamWork.ViewModels.ProfileTutorViewModel

@{Layout = "_LayoutTutorNavbar";}
@{ViewData["Title"] = "TutorStream";}

<script src="~/js/Tutor.js"></script>
<script src="//player.dacast.com/js/player.js"></script>
<script src="~/js/EditProfile.js"></script>
<link rel="stylesheet" href="~/css/Tutor.css" />

@if (!Model.UserProfile.ProfileType.Equals("tutor") || !Model.UserProfile.AcceptedTutor)
{
    <script>
        $(document).ready(function () {
            $('#unapprovedTutorModal').modal({
                backdrop: 'static',
                keyboard: false
            })
        })
    </script>
}
else if (Model.UserChannels[0].ChannelKey == null)
{
    <script>
        $(document).ready(function () {
            $('#channelKeyModal').modal({
                backdrop: 'static',
                keyboard: false
            })
        })
    </script>
}
else if (Model.UserChannels[0].StreamTitle == null && Model.UserChannels[0].StreamSubject == null)
{
    <script>
        $(document).ready(function () {
            $('#registerStreamModal').modal({
                backdrop: 'static',
                keyboard: false
            })
        })
    </script>
}

<div style="background-color:black">
    <div class="container-fluid p-0" style="background-color:black">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-9 mt-3">
                <div id="dacastPlayer"></div>
                <script>
                    window.addEventListener("load", function () {
                              var myPlayer = dacast("135034_c_@Model.UserChannels[0].ChannelKey", 'dacastPlayer', {
                                  
                              });

                    });

                     function CheckForStream() {
                         var player = dacast.players["135034_c_@Model.UserChannels[0].ChannelKey"]

                            if (player.currentTime() == 0) {
                                  alert("It looks like your stream hasn't been started on OBS. Start the stream on OBS and once you see your stream on this page then enter the title and subject.")
                              }
                              else {
                                  RegisterStreamTitleAndStreamSubjectAndCustomThumbanail()
                              }
                          }
                </script>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-3  ">
                @if (true)
                {
                    <iframe style="height:100vh; width:100%" src=@Model.ChatSecretKey allowtransparency="yes" allow="autoplay" frameborder="0" marginheight="0" marginwidth="0" scrolling="auto"></iframe>
                }
            </div>
        </div>
    </div>

    <div id="channelKeyModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: whitesmoke">
                <div class="modal-header">
                    <h5 class="modal-title" style="color: black">Enter Channel Key</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <input id="channelKey" align="middle" type="text" class="form-control" placeholder="Channel Key" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" style="background-color:black; color: white" onclick="ValidateKey()">Validate Key</button>
                </div>
            </div>
        </div>
    </div>

    <div id="registerStreamModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color:whitesmoke">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:black">Start Streaming<span><img id="info" src="~/images/info_icon.png" style="width: 24px; height: 24px; margin-top: -5px; margin-left:7px" data-toggle="tooltip" data-placement="right" title="This is where you start all of you streams!" /></span></h5>
                </div>
                <div class="modal-body">
                    <form>
                        <input align="middle" type="text" class="form-control" value="@Model.UserChannels[0].StreamTitle" id="streamTitle" placeholder="Stream Title">                         <select class="mt-1" style="width: 100%" id="streamSubject">
                            <option value="Select Subject">Select Subject</option>
                            <option value="Mathematics">Mathematics</option>
                            <option value="Science">Science</option>
                            <option value="Engineering">Engineering</option>
                            <option value="Business">Business</option>
                            <option value="Law">Law</option>
                            <option value="Art">Art</option>
                            <option value="Humanities">Humanities</option>
                            <option value="Other">Other</option>
                        </select>
                        <br />
                        <br />
                        <h5 style="color:black">Add A Custom Thumbnail</h5>
                        <img id="previewThumbnail" src="~/images/MathDefault.png" alt="your image" style="width:100%; border-radius:10px" />
                        <br />
                        <br />
                        <div class="upload-uploadbtn-wrapper">
                            <button class="uploadbtn" style="margin-left:125px">Upload a Thumbnail</button>
                            <input id="uploadThumbnail" type='file' value="~/images/MathDefault.png" onchange="readURL(this,'Thumbnail');" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" style=" color: white" onclick="window.location.href = '/Tutor/ProfileTutor'">Exit</button>
                    <button type="button" class="btn" style="background-color:black; color: white" onclick="CheckForStream()">Start Stream</button>
                </div>
            </div>
        </div>
    </div>

    <div id="unapprovedTutorModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: #008080">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:white">Looks like you haven't been verified yet!</h5>
                </div>
                <div class="modal-body">
                    <p style="color: white;">It appears you are not a verified StreamTutor! If you are a student, create a separate student account. If you are a StreamTutor, please wait 1-2 business days to be approved. In the meantime feel free to edit your profile and watch some streams. </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" style=" color:white;  background-color:black"; onclick="window.location.href = '/Tutor/ProfileTutor'">Go Back</button>
                </div>
            </div>
        </div>
    </div>
</div>



<style>

    .dot {
        height: 10vw;
        width: 10vw;
        background-color: white;
        border-radius: 50%;
        text-align: center;
        color: black
    }

    .sidebar {
        height: 100%;
        width: 20%;
        position: fixed;
        z-index: 1;
        top: 0px;
        bottom: 0px;
        right: 0;
        overflow-y: scroll;
        background-color: #006565;
        overflow-x: hidden;
        color: white;
        text-align: center;
    }
</style>

<script>$(document).ready(function () {

        $("#nav").click(function () {

            $("#navbarText").slideToggle();

        });
});
    </script>

<script>
    $("#info").tooltip();
</script>