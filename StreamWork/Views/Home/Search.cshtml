@model StreamWork.ViewModels.SearchViewModel;

@{ViewData["Title"] = "Search";}

<link rel="stylesheet" href="~/css/Subject.css" />

<div class="container-fluid" style="max-width:2400px">
    <div class="row">
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row py-3">
                        <div class="col-md-4">
                            <h1 style="font-size:40px; font-family:'Roboto Slab', serif">@Model.Subject<span style="margin-left:10px"><img width="60" src="@Model.SubjectIcon" /></span></h1>
                        </div>
                        <div class="col-md-8">
                            <form onsubmit="return search();" style="background-color: white; border-radius: 6px; box-shadow: 0px 0px 30px -10px">
                                <div class="row no-gutters align-items-center p-2">
                                    <div class="col-1 pr-3">
                                        <div class="row">
                                            <div class="col-4"></div>
                                            <div class="col-8" style="text-align: right;">
                                                <img src="~/images/magnifying-glass.svg" style="width: 30px" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col" style="min-width: 200px">
                                        <input id="searchQuery" class="form-control form-control-lg" type="search" placeholder="Homework topic..." style="border: none;">
                                    </div>
                                    <div class="col-auto pl-3">
                                        <select id="searchSubject" class="custom-select" style="background-color: #006060; color: white; font-size: 85%; font-weight: bold;">
                                            <option value="Any">All Subjects</option>
                                            <option value="Mathematics">Mathematics</option>
                                            <option value="Science">Science</option>
                                            <option value="Engineering">Engineering</option>
                                            <option value="Business">Business</option>
                                            <option value="Law">Law</option>
                                            <option value="Art">Art</option>
                                            <option value="Humanities">Humanities</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                    <div class="col-auto pr-4">
                                        <button class="btn btn-lg px-4 ml-3" type="submit" style="color: white; background-color:#006060;">
                                            <div style="font-size: 70%; font-weight: bold;">Search</div>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @if (String.IsNullOrEmpty(Model.SearchQuery))
                    {
                        <h5>LIVE STREAMS</h5>
                    }
                    else
                    {
                        <h5>LIVE STREAMS FOR "@Model.SearchQuery"</h5>
                    }
                    <hr />
                </div>
            </div>
            <div class="row">
                @if (Model.StreamResults.ToArray().Length > 0)
                {
                    foreach (var videoInfo in Model.StreamResults)
                    {
                        if (videoInfo.StreamTitle != null)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 streamsubject @videoInfo.StreamSubject">
                                <div class="card mt-3" style="border-radius:5%; border:none; max-width:375px">
                                    <iframe src="//iframe.dacast.com/b/135034/c/@videoInfo.ChannelKey" style="border-top-left-radius:10px; border-top-right-radius:10px; min-width:250px" height="215" frameborder="0" scrolling="no" allow="autoplay"></iframe>
                                    <div class="card-body p-0" style="background-color:black;border-bottom-left-radius:10px; height:75px; border-bottom-right-radius:10px; border:none; min-width:250px; cursor:pointer" onclick="window.location.href='../StreamViews/StreamPage?streamKeyandchatId=' + ('@videoInfo.ChannelKey') + ('|') + ('@Model.StreamResults[0].ChatId') + ('|') + ('@videoInfo.Username') + ('|') + ('@videoInfo.StreamTitle');">
                                        <div class="row">
                                            <div class="col-2 pr-2">
                                                <input type="image" style="border-radius:5%; width:50px; margin-left:10px; margin-top:10px; height:60px;" src=@videoInfo.ProfilePicture onclick="window.location.href='/Home/ProfileView?Tutor=' + ('@videoInfo.Username');" />
                                            </div>
                                            <div class="col-10" style="color:white;">
                                                <h5 class="text-truncate" style="font-family: 'Roboto'; font-size:20px; margin-left:20px; margin-top:10px;">@videoInfo.StreamTitle</h5>
                                                <h6 class="text-truncate" style="font-family: 'Roboto'; font-size:14px;margin-left:20px;">@videoInfo.Username</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="col-1"></div>
                    <h3 class="m-4">No matches were found for your search</h3>
                }
            </div>
            <br />
            <br />
            @if (String.IsNullOrEmpty(Model.SearchQuery))
            {
                <h5>ARCHIVE</h5>
            }
            else
            {
                <h5>ARCHIVE FOR "@Model.SearchQuery"</h5>
            }
            <hr />
            <div class="row">
                @if (Model.ArchiveResults.ToArray().Length > 0)
                {
                    foreach (var videoInfo in Model.ArchiveResults)
                    {
                        if (videoInfo.StreamTitle != null)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 streamsubject @videoInfo.StreamSubject">
                                <div class="card mt-3" style="border-radius:5%; border:none; max-width:375px">
                                    <input type="image" width="100%" height="210px" style="border-top-left-radius:5%; border-top-right-radius:5%; min-width:250px" src=@videoInfo.StreamThumbnail onclick="window.location.href = '/StreamViews/StreamPlaybackPage?streamId=@videoInfo.StreamID'">
                                    <div class="card-body p-0" style="background-color:black ;border-bottom-left-radius:5%; height:75px; border-bottom-right-radius:5%; border:none; min-width:250px; cursor: pointer;" onclick="window.location.href='/Home/ProfileView?Tutor=@videoInfo.Username';" onmouseover="">
                                        <div class="row">
                                            <div class="col-2 pr-2">
                                                <input type="image" style="border-radius:5%; width:50px; margin-left:10px; margin-top:10px; height:60px;" src=@videoInfo.ProfilePicture />
                                            </div>
                                            <div class="col-10" style="color:white;">
                                                <h5 class="text-truncate" style="font-family: 'Roboto'; font-size:20px; margin-left:20px; margin-top:10px;">@videoInfo.StreamTitle</h5>
                                                <h6 class="text-truncate" style="font-family: 'Roboto'; font-size:14px;margin-left:20px;">@videoInfo.Username</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="col-1"></div>
                    <h3>No matches were found for your search</h3>
                }
            </div>
        </div>
        <nav class="col-lg-2 d-none d-lg-block sidebar ">
            <div class="sidebar-sticky">
                <h5 class="mt-4" style="font-size:14px; font-family:'Roboto Slab', serif; font-weight:bold; color:black">Popular StreamTutors</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            @foreach (var tutor in Model.PopularStreamTutors)
                            {
                                <div class="card pt-3 pd-3 zoom" style="display:block;background-color:whitesmoke;border:none" onclick="window.location.href='/Home/ProfileView?Tutor=' + ('@tutor.Username');">
                                    <div class="card-title">
                                        <input type="image" style="width:55px; height:75px; border-radius: 5%" src=@tutor.ProfilePicture />
                                        <h3 class="p-1" style="font-size:14px; color:black">@tutor.Name.Replace('|', ' ')</h3>
                                    </div>
                                </div>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>

<div id="editModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #008080">

            <div class="modal-header">
                <h5 class="modal-title" style="color:white">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                @if (Model.UserProfile != null)
                {
                    <form>
                        <input align="middle" type="text" class="form-control" id="ProfileCaption" placeholder="Caption" value="@Model.UserProfile.ProfileCaption" />
                        <br />
                        <textarea align="middle" type="text" class="form-control" id="ProfileParagraph" placeholder="About Me" style="height:100px">@Model.UserProfile.ProfileParagraph</textarea>
                        <br />
                        <img id="previewProfilePic" src=@Model.UserProfile.ProfilePicture alt="your image" style="border-radius: 50%; width:115px; height:150px; display:block;margin-left:auto;margin-right:auto" />
                        <br />
                        <div class="upload-uploadbtn-wrapper">
                            <button class="uploadbtn" style="margin-left:110px">Upload a Profile Picture</button>
                            <input id="uploadProfilePic" type='file' onchange="readURL(this,'ProfilePic');" />
                        </div>

                    </form>
                }
            </div>

            <div class="modal-footer">
                <button type="button" style="background-color:black; color:white" class="btn" onclick="RegisterProfilePhotoAndCaption()">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>$(document).ready(function () {
        $("#nav").click(function () {
            $("#navbarText").slideToggle();
        });
    });</script>
