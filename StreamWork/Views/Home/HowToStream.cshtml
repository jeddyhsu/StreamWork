@model StreamWork.DataModels.UserLogin
<script src="~/js/EditProfile.js"></script>
<script src="~/js/SignUpLogin.js"></script>
@{
    ViewData["Title"] = "How to Stream";
}
<div style="font-family:'Roboto', sans-serif;">
    <nav class="navbar navbar-expand-lg text-center" style="position:fixed;z-index:2 ;width:100%;background-color:#008080">
        <img src="~/images/streamworkPencilWhite.png" height="70" onclick="window.location.href='/'" />
        <button class="navbar-toggler" type="button" data-toggle="collapse" id="nav" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
             <ul class="navbar-nav mr-auto">
                <li class="nav-item ml-sm-4 mt-1" style="font-size:15px;">
                    <a class="nav-link" href="/" style="color:white;">Browse by Subjects</a>
                </li>
                <li class="nav-item ml-sm-5 mt-1" style="font-size:15px; ">
                    <a class="nav-link" href="/Home/BecomeTutor" style="color:white;">Become a StreamTutor</a>
                </li>
                <li class="nav-item ml-sm-5 mt-1" style="font-size:15px;">
                    <a id="button" class="nav-link" href="/Home/About" style="color:white;">About</a>
                </li>
                <li class="nav-item ml-sm-5 mt-1" style="font-size:15px;">
                    <a class="nav-link" href="/Home/HowToStream" style="color:white;">How to Stream</a>
                </li>
            </ul>
             @if(@Model == null || Model.LoggedIn == null){
               <ul class="navbar-nav ml-auto">
                <li class="nav-item mt-1 ml-auto" style="font-size:17px;">
                    <a class="btn buttonStyleSignIn pt-2" onclick="window.location.href='/Home/PickStudentOrTutor'" id="sign" style="color:white"><b>Sign Up</b></a>
                </li>
                <li class="nav-item mt-1 ml-auto" style="font-size:17px;">
                    <a class="btn buttonStyleLogin pt-2" onclick="window.location.href='/Home/Login?dest=-Home-Profile'" style="background-color:white; color:#008080"><b>Login</b></a>
                </li>
            </ul>
            }
            else if(Model.LoggedIn == "Logged In"){
                 <div class="btn-group">
                     <img src=@Model.ProfilePicture style="width:75px; height:95px; border-radius:50%" />
                     <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #008080; border:none; margin-right:35px"></button>
                     <div class="dropdown-menu">
                         <a class="dropdown-item" href="#" id="EditProfile" onclick="Dashboard('@Model.ProfileType')">Dashboard</a>
                         <div class="dropdown-divider"></div>
                        <!--
                           
                           @if (Model.ProfileType == "tutor")
                            {
                            <a class="dropdown-item" href="#" id="EditProfile" onclick="EditProfile()">Edit Profile</a>
                            <div class="dropdown-divider"></div>
                            }

                        -->
                        @if(Model.ProfileType == "tutor")
                        {
                             <a class="dropdown-item" href="#" id="Settings" onclick="window.location.href='/Tutor/TutorSettings'">Settings</a>
                        }
                        else
                        {
                             <a class="dropdown-item" href="#" id="Settings" onclick="window.location.href='/Student/StudentSettings'">Settings</a>
                        }

                         <div class="dropdown-divider"></div>
                         <a class="dropdown-item" href="#" onclick="Logout()"   >Logout</a>
                     </div>
                 </div>
                 <div id="editModal" class="modal" tabindex="-1" role="dialog">
                     <div class="modal-dialog" role="document">
                         <div class="modal-content" style="background-color: #008080">
                             <div class="modal-header">
                                 <h5 class="modal-title" style="color:white">Edit Profile</h5>
                                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                     <span aria-hidden="true">&times;</span>
                                 </button>
                             </div>
                             <div class="modal-body">
                                 <form>
                                     <input align="middle" type="text" class="form-control" id="ProfileCaption" placeholder="Caption" value="@Model.ProfileCaption" />
                                     <br />
                                     <textarea align="middle" type="text" class="form-control" id="ProfileParagraph" placeholder="About Me" style="height:100px">@Model.ProfileParagraph</textarea>
                                     <br />
                                     <img id="previewProfilePic" src=@Model.ProfilePicture alt="your image" style="border-radius: 50%; width:115px; height:150px; display:block;margin-left:auto;margin-right:auto" />
                                     <br />
                                     <div class="upload-uploadbtn-wrapper">
                                         <button class="uploadbtn">Upload a Profile Picture</button>
                                         <input id="uploadProfilePic" type='file' onchange="readURL(this,'ProfilePic');" />
                                     </div>
                    
                                 </form>
                             </div>
                             <div class="modal-footer">
                                 <button type="button" style="background-color:black; color:white" class="btn" onclick="RegisterProfilePhotoAndCaption()">Save changes</button>
                                 <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                             </div>
                         </div>
                     </div>
                 </div>
            }
        </div>
    </nav>
    <div class="container-fluid" style="padding-top:140px">
        <div class="row">
            <div class="col-lg-1 col-md-0 col-sm-0"></div>
            <div class="col-lg-10 col-md-12 col-sm-12">
                <div class="card" style="background-color: #006565;">
                    <div class="card-body">
                        <div class="d-none d-md-block col-3"></div>
                        <div class="  p-5" style="background-color: #006565; color: white; text-align: justify;">
                            <img src="/images/streamworkPencilWhite.png" style="height: 104px; width: 72px; margin-left:auto; margin-right:auto;display:block">
                            <br />
                            <h2 style="text-align: center">How To Stream</h2> <br />
                            <h4>Initial Setup</h4>
                            <ol start="1">
                                <li>Install <a href="https://obsproject.com/" style="color: #AAAAFF">Open Broadcast Software (OBS)</a></li>
                                <li><a href="/Home/SignUp" style="color: #AAAAFF">Create a <strong>StreamTutor</strong> account</a> on <strong>StreamWork</strong> using an active email</li>
                                <li>We will then verify your qualifications and provide you with a stream key, username and password for OBS within 1-2 business days</li>
                            </ol>
                            <strong>Once you have received your OBS information:</strong>
                            <ol start="4">
                                <li>Go to Settings/Stream on OBS</li>
                                <li>In the dropdown box labeled "Service" make sure that it is set to "Custom"</li>
                                <li>In box labeled "Server" copy and paste the RTMP url that you were provided</li>
                                <li>In box labeled "StreamKey" copy and paste the stream key that you were provided</li>
                                <li>Check "Use Authentication"</li>
                                <li>Enter the username and password that you were provided</li>
                            </ol>
                            <h4>Every Time Streaming</h4>
                            <strong>On OBS:</strong>
                            <ol>
                                <li>Start your stream</li>
                            </ol>
                            <strong>On StreamWork:</strong>
                            <ol start="3">
                                <li><a href="https://www.streamwork.live/Home/Login?-Home-Profile" style="color: #AAAAFF">Login</a> to your profile and you will see your stream playing on "Start Streaming"</li>
                                <li>Enter the stream title and what subject you're streaming</li>
                                <li>Go live!</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>