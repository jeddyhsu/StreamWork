@model StreamWork.ViewModels.ProfileTutorViewModel

@{ViewData["Title"] = "ProfileView";}

<div class="container">
    <div class="card text-center mt-5 border-0" style="color:white;">
        <div class="card-body" style="background-color:#006565; border-top-right-radius:5px; border-top-left-radius:5px; ">
            <img src=@Model.studentOrtutorProfile.ProfilePicture style="width:115px; height: 150px; border-radius:50%" />
            <br />
            @if (Model.isUserFollowingThisTutor == false && Model.userProfile.ProfileType == "student")
            {
                <button id="FollowButton" type="button" style="font-size:12px" class="btn btn-primary mt-3" onclick="FollowStreamTutor('@Model.userChannels[0].Id')">Follow StreamTutor</button>
                <button id="UnfollowButton" type="button" style="font-size:12px; display:none" class="btn btn-primary mt-3" onclick="UnfollowStreamTutor('@Model.userChannels[0].Id')">Unfollow StreamTutor</button>
            }
            else if(Model.isUserFollowingThisTutor == true && Model.userProfile.ProfileType == "student")
            {
                <button id="FollowButton" type="button" style="font-size:12px;display:none" class="btn btn-primary mt-3" onclick="FollowStreamTutor('@Model.userChannels[0].Id')">Follow StreamTutor</button>
                <button id="UnfollowButton" type="button" style="font-size:12px" class="btn btn-primary mt-3" onclick="UnfollowStreamTutor('@Model.userChannels[0].Id')">Unfollow StreamTutor</button>
            }
            <h1 class="card-title mt-4" style=" font-size:24px; color:lightgray"><b>@Model.studentOrtutorProfile.Name.Replace('|', ' ')</b></h1>
            <p class="card-text" style="font-size:16px; color:white">@Model.studentOrtutorProfile.ProfileCaption</p>
            <p class="card-text" style="font-size:14px; color:white">@Model.studentOrtutorProfile.ProfileParagraph</p>
        </div>
        <div class="row">
            <div class="col-4 pr-0">
                <div class="card-body" style="background-color:#006565; border-bottom-left-radius:5px">
                   <h5 style="color:lightgray">Streams</h5>
                    <h4>@Model.numberOfStreams</h4>
                </div>
            </div>
            <div class="col-4 p-0">
                <div class="card-body" style="background-color:#006565;border-top-left-radius:0px ">
                  <a target="_blank" rel="noopener noreferrer" href="/Home/Donate?tutor=@Model.userProfile.Username">
                    <img src="~/images/donate201911.png" target="_blank" rel="noopener noreferrer" style="display:block; margin-left:auto; margin-right:auto; width:120px; height:68px" />
                </a>
                </div>
            </div>
            <div class="col-4 pl-0">
                <div class="card-body" style="background-color:#006565; border-bottom-right-radius:5px ">
                  <h5 style="color:lightgray">Total Views</h5>
                   <h4>0</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid" style="width:100%; padding-left:100px; padding-right:100px">
    <h2 class="text-center"><b>Past Streams</b></h2>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var videoInfo in Model.userArchivedVideos)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-6 zoom streamsubject @videoInfo.StreamSubject">
                        <div class="card mt-3" style="border-radius:5%; border:none; max-width:375px">
                            <input type="image" width="100%" height="210px" style="border-top-left-radius:5%; border-top-right-radius:5%; min-width:250px" src=@videoInfo.StreamThumbnail onclick="window.location.href = '/StreamViews/StreamPlaybackPage?streamId=@videoInfo.StreamID'">
                            <div class="card-body p-0" style="background-color:#008080 ;border-bottom-left-radius:5%; height:75px; border-bottom-right-radius:5%; border:none; min-width:250px; cursor: pointer;" onclick="window.location.href='/Home/ProfileView?Tutor=@videoInfo.Username';" onmouseover="">
                                <div class="row">
                                    <div class="col-2 pr-2">
                                        <input type="image" style="border-radius:50%; width:50px; margin-left:10px; margin-top:10px; height:60px;" src=@videoInfo.ProfilePicture />
                                    </div>
                                    <div class="col-10" style="color:white;">
                                        <h5 class="text-truncate" style="font-family: 'Roboto'; font-size:20px; margin-left:20px; margin-top:10px;">@videoInfo.StreamTitle</h5>
                                        <h6 class="text-truncate" style="font-family: 'Roboto'; font-size:14px;margin-left:20px;">@videoInfo.Username</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div id="editModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #008080">
            <div class="modal-header">
                <h5 class="modal-title" style="color:white">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input align="middle" type="text" class="form-control" id="ProfileCaption" placeholder="Caption" value="@Model.studentOrtutorProfile.ProfileCaption" />
                    <br />
                    <textarea align="middle" type="text" class="form-control" id="ProfileParagraph" placeholder="About Me" style="height:100px">@Model.studentOrtutorProfile.ProfileParagraph</textarea>
                    <br />
                    <img id="previewProfilePic" src=@Model.studentOrtutorProfile.ProfilePicture alt="your image" style="border-radius: 50%; width:115px; height:150px; display:block;margin-left:auto;margin-right:auto" />
                    <br />
                    <div class="upload-uploadbtn-wrapper">
                        <button class="uploadbtn" style="margin-left:110px">Upload a Profile Picture</button>
                        <input id="uploadProfilePic" type='file' onchange="readURL(this,'ProfilePic');" />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" style="background-color:black; color:white" class="btn" onclick="RegisterProfilePhotoAndCaption()">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<style>

    .dot {
        height: 10vw;
        width: 10vw;
        background-color: white;
        border-radius: 50%;
        text-align: center;
        color: black
    }

    .sidebar {
        height: 100%;
        width: 20%;
        position: fixed;
        z-index: 1;
        top: 85px;
        left: 0;
        background-color: #006565;
        overflow-x: hidden;
        color: white;
        text-align: center;
    }
</style>


<script>
    $(document).ready(function () {
        $("#nav").click(function () {
            $("#navbarText").slideToggle();
        });
    });
</script>