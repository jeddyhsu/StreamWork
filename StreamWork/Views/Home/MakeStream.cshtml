        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6" style="background-color:#F8F9FA; border-radius: 16px">
                <div class="my-1">
                    <center>
                        <br>
                        <h1>Sign Up</h1> <br>
                        <form>
                            <input type="text" id="title" placeholder="Stream Title"> &nbsp; &nbsp;
                            <textarea id="description" style="width: 250px; height: 150px;" placeholder="Stream Description..."></textarea> <br> <br>
                            <strong>Subject:</strong> &nbsp; &nbsp; &nbsp;
                            <select id="subject">
                                <option value="math">Mathematics</option>
                                <option value="literature">Literature</option>
                                <option value="engineering">Engineering</option>
                                <option value="designArt">Design & Art</option>
                                <option value="science">Science</option>
                                <option value="business">Business</option>
                                <option value="programming">Programming</option>
                                <option value="other">Other</option>
                            </select> <br> <br>
                            <input type="button" value="Start Stream" onclick="MakeStream()"> <br> <br>
                        </form>
                    </center>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</div>

<script>
    function MakeStream() {
        // !!! WIP !!!

        $.ajax({
            url: '/Home/MakeStream',
            type: 'post',
            dataType: 'json',

            data: {
                'nameFirst': $("#nameFirst").val(),
                'nameLast': $("#nameLast").val(),
                'email': $("#email").val(),
                'phone': $("#phone").val(),
                'username': $("#username").val(),
                'password': $('#password').val(),
                'passwordConfirm': $('#passwordConfirm').val(),
                'role': $('#role').val(),

            },        
            success: function (data) {
                if (data.message === "Success") {

                    window.location.href='../StreamViews/MathStream';
                }
                else if (data.message === "Wrong confirmPassword") {

                    alert("Passwords do not match");
                }
                else {
                    alert("Username already exsists");

                }
              
            }
           

        });

    }
    
</script>
  