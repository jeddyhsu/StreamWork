@{ViewData["title"] = "Sign Up";}

<br />
<br />
<br />
<div class=" text-center">
    <form class="form-sign">
        <img src="~/images/StreamWorkLogo (2).png" width="250" height="70" onclick="window.location.href='/'" />
        <h1>Sign Up</h1> <br>
        <input type="text" class="form-control" id="nameFirst" placeholder="First Name"><br>
        <input type="text" class="form-control" id="nameLast" placeholder="Last Name"> <br>
        <input type="text" class="form-control" id="email" placeholder="Email Address" size="45"> <br> 
        <input type="text" class="form-control" id="phone" placeholder="Phone Number" size="45"> <br> 
        <input type="text" class="form-control" id="username" placeholder="Username" size="45"> <br> 
        <input type="password" class="form-control" id="password" placeholder="Password" size="45"><br> 
        <input type="password" class="form-control" id="passwordConfirm" placeholder="Reenter Password" size="45"> <br> <br>
        <strong>Login Type:</strong> &nbsp; &nbsp; &nbsp;
        <select id="role">
            <option value="student">Student</option>
            <option value="tutor">Tutor</option>
        </select> <br> <br>
        <input type="button"  class="btn btn-block" value="SignUp" onclick="SignUp()" style="background-color:#008080; color: white"> <br> <br>
    </form>
</div>
<script>
    function SignUp() {
        $.ajax({
            url: '/Home/SignUp',
            type: 'post',
            dataType: 'json',

            data: {
                'nameFirst': $("#nameFirst").val(),
                'nameLast': $("#nameLast").val(),
                'email': $("#email").val(),
                'phone': $("#phone").val(),
                'username': $("#username").val(),
                'password': $('#password').val(),
                'passwordConfirm': $('#passwordConfirm').val(),
                'role': $('#role').val(),

            },        
            success: function (data) {
                if (data.message === "Success") {

                    window.location.href='/Home/Login';
                }
                else if (data.message === "Wrong confirmPassword") {

                    alert("Passwords do not match");
                }
                else {
                    alert("Username already exsists");

                }
              
            }
           

        });

    }
    
</script>
  