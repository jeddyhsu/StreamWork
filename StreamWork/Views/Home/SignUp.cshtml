@{ViewData["title"] = "Sign Up";}

<div class="container-fluid">
    <div class="row" style="background-color:#F2F2F2">
        <div class="col-sm-10">
            <img src="~/images/StreamWorkLogo (2).png" width="250" height="70" onclick="window.open('/')" />
            <div class="btn-group">
                <button class="btn buttonStylePages">Browse by subjects</button>
                <button class="btn buttonStylePages">Find Tutors</button>
                <button class="btn buttonStylePages">Popular Livestreams</button>
                <button class="btn buttonStylePages ml-sm-4">Become a Tutor</button>
                <button class="btn buttonStylePages ml-sm-4">About StreamWork</button>
            </div>
        </div>
        <div class="col-sm-2 p-0">
            <div class=" btn-group">
                <div>
                    <h6 class="mt-sm-2">Johnny Appleseed</h6>
                    <h6 class="float-right">#student</h6>
                </div>              
                <div class="dot4 m-sm-2"></div>
            </div>
           
        </div>
    </div>
    <div class="my-5">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4" style="background-color:#F0F0F0">
                <div class="my-1">
                    <div class="row">
                        <h4>&ensp;Sign Up</h4>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            Email:
                        </div>
                        <div class="col-sm-1">
                            <form>
                                <input type="text">
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            Password:
                        </div>
                        <div class="col-sm-1">
                            <form>
                                <input type="password">
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3" style="line-height: 100%">
                            Confirm password:
                        </div>
                        <div class="col-sm-1">
                            <form>
                                <input type="password">
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="button" class="btn btn-outline-primary float-right" value="Sign Up" onclick="window.open('Profile')">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>
  