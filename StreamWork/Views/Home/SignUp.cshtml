<div class="container-fluid">
    <div class="my-5">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6" style="background-color:#F8F9FA; border-radius: 16px">
                <div class="my-1">
                    <center>
                        <br>
                        <h1>Sign Up</h1> <br>
                        <form>
                            <input type="text" id="nameFirst" placeholder="First Name"> &nbsp; &nbsp;
                            <input type="text" id="nameLast" placeholder="Last Name"> <br> <br>
                            <input type="text" id="email" placeholder="Email Address" size="45"> <br> <br>
                            <input type="text" id="phone" placeholder="Phone Number" size="45"> <br> <br>
                            <input type="text" id="username" placeholder="username" size="45"> <br> <br>
                            <input type="password" id="password" placeholder="Password" size="45"> <br> <br>
                            <input type="password" id="passwordConfirm" placeholder="Reenter Password" size="45"> <br> <br>
                            <strong>Login Type:</strong> &nbsp; &nbsp; &nbsp;
                            <select id="role">
                                <option value="student">Student</option>
                                <option value="tutor">Tutor</option>
                            </select> <br> <br>
                            <input type="button" value="SignUp" onclick="SignUp()"> <br> <br>
                        </form>
                    </center>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</div>

<script>
    function SignUp() {
        $.ajax({
            url: '/Home/SignUp',
            type: 'post',
            dataType: 'json',

            data: {
                'nameFirst': $("#nameFirst").val(),
                'nameLast': $("#nameLast").val(),
                'email': $("#email").val(),
                'phone': $("#phone").val(),
                'username': $("#username").val(),
                'password': $('#password').val(),
                'passwordConfirm': $('#passwordConfirm').val(),
                'role': $('#role').val(),

            },        
            success: function (data) {
                if (data.message === "Success") {

                    window.location.href='/Home/Login';
                }
                else if (data.message === "Wrong confirmPassword") {

                    alert("Passwords do not match");
                }
                else {
                    alert("Username already exsists");

                }
              
            }
           

        });

    }
    
</script>
  