@model StreamWork.ViewModels.ProfileTutorViewModel
<script src="~/js/EditProfile.js"></script>
<script src="~/js/SignUpLogin.js"></script>
<link rel="stylesheet" href="~/css/Index.css" />

<nav class="navbar navbar-expand-lg navbar-light text-center" style="background-color:#008080;">
        <img src="~/images/streamworkPencilWhite.png" height="70" onclick="window.location.href='/'" onmouseover="" style="cursor: pointer;" />
        <button class="navbar-toggler" type="button" data-toggle="collapse" id="nav" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ml-md-0 ml-lg-5 mt-1" style="font-size:15px; ">
                    <a class="nav-link underline" href="/Home/BecomeTutor" style="color:white;"><b>Become a StreamTutor</b></a>
                </li>
                <li class="nav-item ml-md-0 ml-lg-5 mt-1" style="font-size:15px;">
                    <a class="nav-link underline" href="/Home/About" style="color:white;"><b>About</b></a>
                </li>
                <li class="nav-item ml-md-0 ml-lg-5 mt-1" style="font-size:15px;">
                    <a class="nav-link underline" href="/Home/HowToStream" style="color:white;"><b>How to Stream</b></a>
                </li>
            </ul>
            @if(@Model.userProfile == null){
            <ul class="navbar-nav">
                <li class="nav-item mt-1" style="font-size:17px;">
                    <a class="btn buttonSignIn pt-2" style="color:white" onclick="window.location.href='Home/PickStudentOrTutor'"><b>Sign Up</b></a>
                </li>
                <li class="nav-item mt-1" style="font-size:17px;">
                    <a class="btn buttonStyleLogin pt-2" style="background-color:white; color:#008080" onclick="window.location.href='Home/Login?dest=-Home-Profile'"><b>Login</b></a>
                </li>
            </ul>
            }
            else if(Model.userProfile != null){
                 <div class="btn-group mt-2" style="margin-left:65px">
                     <img src=@Model.userProfile.ProfilePicture style="width:75px; height:95px; border-radius:50%" />
                     <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #008080; border:none; margin-right:35px"></button>
                     <div class="dropdown-menu">
                         <a class="dropdown-item" href="#" id="EditProfile" onclick="Dashboard('@Model.userProfile.ProfileType')">Dashboard</a>
                         <div class="dropdown-divider"></div>
                        @if (Model.userProfile.ProfileType == "tutor")
                            {
                          <a class="dropdown-item" href="#" id="EditProfile" onclick="EditProfile()">Edit Profile</a>
                         <div class="dropdown-divider"></div>
                            }
                        @if(Model.userProfile.ProfileType == "tutor")
                        {
                             <a class="dropdown-item" href="#" id="Settings" onclick="window.location.href='/Tutor/TutorSettings'">Settings</a>
                        }
                        else
                        {
                             <a class="dropdown-item" href="#" id="Settings" onclick="window.location.href='/Student/StudentSettings'">Settings</a>
                        }

                         <div class="dropdown-divider"></div>
                         <a class="dropdown-item" href="#" onclick="Logout()">Logout</a>
                     </div>
                 </div>
                 <div id="editModal" class="modal" tabindex="-1" role="dialog">
                     <div class="modal-dialog" role="document">
                         <div class="modal-content" style="background-color: #008080">
                             <div class="modal-header">
                                 <h5 class="modal-title" style="color:white">Edit Profile</h5>
                                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                     <span aria-hidden="true">&times;</span>
                                 </button>
                             </div>
                             <div class="modal-body">
                                 <form>
                                     <input align="middle" type="text" class="form-control" id="ProfileCaption" placeholder="Caption" value="@Model.userProfile.ProfileCaption" />
                                     <br />
                                     <textarea align="middle" type="text" class="form-control" id="ProfileParagraph" placeholder="About Me" style="height:100px">@Model.userProfile.ProfileParagraph</textarea>
                                     <br />
                                     <img id="previewProfilePic" src=@Model.userProfile.ProfilePicture alt="your image" style="border-radius: 50%; width:115px; height:150px; display:block;margin-left:auto;margin-right:auto" />
                                     <br />
                                     <div class="upload-uploadbtn-wrapper">
                                         <button class="uploadbtn">Upload a Profile Picture</button>
                                         <input id="uploadProfilePic" type='file' onchange="readURL(this,'ProfilePic');" />
                                     </div>
                    
                                 </form>
                             </div>

                             <div class="modal-footer">
                                 <button type="button" style="background-color:black; color:white" class="btn" onclick="RegisterProfilePhotoAndCaption()">Save changes</button>
                                 <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                             </div>
                         </div>
                     </div>
                 </div>
            }
        </div>
     </nav>

<section class="jumbotron text-center" style="background-color:white">
    <div class="container">
        <img src="~/images/streamworklogo.png" width="317" height="87" />
        <p><font size="3"><i>Your academic live-streaming tutoring center</i></font></p>    
        <p><font size="3"><b>I'm a student and I need help with...</b></font></p>
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2" align="center">
                <input class="zoom" type="image" src="~/images/MathCard.png" style="width:90%; height:95%; cursor: pointer;"; onclick="window.location.href='Home/Subject?s=Mathematics'" onmouseover="" />
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2" align="center">
               <input class="zoom" type="image" src="~/images/ScienceCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Science'" onmouseover="" />
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2" align="center">
                <input class="zoom" type="image" src="~/images/EngineeringCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Engineering'" onmouseover="" />
            </div>
             <div class="col-lg-3 col-md-6 col-sm-6 mt-2" align="center">
                <input class="zoom" type="image" src="~/images/BuisnessCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Business'" onmouseover="" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 mt-5" align="center">
                <input class="zoom" type="image" src="~/images/LawCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Law'" onmouseover="" />
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-5" align="center">
                <input class="zoom" type="image" src="~/images/ArtCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Art'" onmouseover="" />
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-5" align="center">
                <input class="zoom" type="image" src="~/images/HumanitiesCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Humanities'" onmouseover="" />
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-5" align="center">
               <input class="zoom" type="image" src="~/images/OtherCard.png" style="width:90%; height:95%; cursor: pointer;" onclick="window.location.href='Home/Subject?s=Other'" onmouseover="" />
            </div>
        </div>
        <h1><font size="3"><b>Already a StreamTutor?</b> </font></h1>
        @if(Model.userProfile != null){
             <img class="zoom" src="~/images/StartBroadcast.png" style="width:250px; cursor: pointer;" onclick="StartBroadcast('@Model.userProfile.ProfileType')" onmouseover="" />
        }
        else{
             <img class="zoom" src="~/images/StartBroadcast.png" style="width:250px; cursor: pointer;" onclick="window.location.href='Home/Login?dest=-Home-Profile'" onmouseover="" />
        }
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-sm-12 col-lg-4">
                <p style="font-size:11px" class="mt-4">
                    Made for ASU undergrads, StreamWork is an online educational platform which provides interactive peer-to-peer teaching and tutoring through live-stream sessions. Our StreamTutors are committed to bringing the minds of students together, building on each other’s knowledge to reach scholastic success. StreamWork is dedicated to academic integrity and does not tolerate cheating in any form.
                </p>
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {

        $("#nav").click(function () {

            $("#navbarText").slideToggle();

        });
    });

    
</script>

<style>
    .subjectCard:hover{
        box-shadow: 10px 10px grey;
    }
</style>
