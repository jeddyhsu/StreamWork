@model StreamWork.ViewModels.ProfileStudentViewModel

@{Layout = "_LayoutStudentNavbar";}
@{ViewData["Title"] = "LiveStreams  ";}

<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10 col-md-12 col-sm-12">
            <form class="p-2" onsubmit="return searchStreams();" style="background-color: white; border-radius: 6px; box-shadow: 0px 0px 30px -10px">
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-sm-12">
                        <div>
                            <input id="searchQuery" class="form-control form-control-lg mt-2 mb-2" type="search" placeholder="🔎 Homework topic..." style="border: none;">
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 col-sm-12">
                        <select id="searchSubject" class="custom-select mt-2 mb-2" style="background-color: #006060; height:46px; color: white; font-size: 85%; font-weight: bold;">
                            <option value="Any">All Subjects</option>
                            <option value="Mathematics">Mathematics</option>
                            <option value="Science">Science</option>
                            <option value="Engineering">Engineering</option>
                            <option value="Business">Business</option>
                            <option value="Law">Law</option>
                            <option value="Art">Art</option>
                            <option value="Humanities">Humanities</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-12">
                        <button class="btn btn-lg mt-2 mb-2" type="submit" style="color: white; background-color:#006060; height:46px; width:100px;margin-left:auto; margin-right:auto; display:block">
                            <div>
                                <div style="font-size: 70%; font-weight: bold;">Search</div>
                            </div>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="container" style="width:100%;">
    <h2 class="text-center" style="font-family:'Roboto Slab', serif"><b>Live Streams</b><span class="ml-2"><img id="info" src="~/images/info_icon.png" style="width: 24px; height: 24px; margin-top: -5px;" data-toggle="tooltip" data-placement="right" title="Watch all your favorite educational livestreams here. The best part is that they are all free!" /></span></h2>
    <div class="row">
        @if (Model.UserChannels.ToArray().Length > 0)
        {
            foreach (var videoInfo in Model.UserChannels)
            {
                if (videoInfo.StreamSubject != null)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 streamsubject @videoInfo.StreamSubject">
                        <div class="card mt-3" style="border-radius:5%; border:none;">
                            <iframe src="https://c.streamhoster.com/embed/media/WxsdDM/mAe0epZsixC/@videoInfo.ChannelKey.Split('|')[0]" style="width:100%; height:200px; border-top-left-radius:10px; border-top-right-radius:10px;" frameborder="0" scrolling="no" allow="autoplay"></iframe>
                            <div class="card-body p-0" style="background-color:#008080;border-bottom-left-radius:10px; border-bottom-right-radius:10px; border:none; cursor:pointer" onclick="window.location.href='../StreamViews/StreamPage?streamTutorUsername=' + ('@videoInfo.Username')">
                                <div class="row">
                                    <div class="col-12">
                                        <input type="image" style="border-radius:5%; width:50px; margin-left:10px; margin-top:10px; margin-bottom:10px; height:60px; float:left" src=@videoInfo.ProfilePicture />
                                        <h5 class="text-truncate" style="font-family: 'Roboto'; font-size:15px; color:white; margin-left:80px; margin-top:10px;">@videoInfo.StreamTitle</h5>
                                        <h6 class="text-truncate" style="font-family: 'Roboto'; font-size:14px; color:white; margin-left:80px;">@videoInfo.Username</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>

<script>
    $("#info").tooltip();
    $("#info2").tooltip()
</script>

<style>
    .underline:hover {
        text-decoration: underline;
    }
</style>

<script>
    $(document).ready(function () {

        $("#nav").click(function () {

            $("#navbarText").slideToggle();

        });
    });
</script>
