@model StreamWork.ViewModels.ProfileStudentViewModel
@{ViewData["Title"] = "StudentSettings";}

<script src="~/js/EditProfile.js"></script>
<script src="~/js/Settings.js"></script>
<link rel="stylesheet" href="~/css/Student.css"/>

<nav class="navbar navbar-expand-lg navbar-light text-center" style="background-color:#008080; z-index:1000">
    <img src="~/images/streamworkPencilWhite.png" height="70" onclick="window.location.href='/'" />
    <button class="navbar-toggler" type="button" data-toggle="collapse" id="nav" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item ml-md-0 ml-lg-5 mt-1" style="font-size:15px;">
                <a class="nav-link underline" href="/Student/ProfileStudent" style="color:white;"><b>Live Streams</b></a>
            </li>
            <li class="nav-item ml-md-0 ml-lg-5 mt-1" style="font-size:14px; ">
                <a class="nav-link underline" href="/Student/ArchivedStreams" style="color:white;"><b>Archived Streams</b></a>
            </li>
            <li class="nav-item ml-md-0 ml-lg-5 mt-1" style="font-size:15px;">
                <a class="nav-link underline" href="/" style="color:white;"><b>Home</b></a>
            </li>
        </ul>
        <div class="btn-group mt-2" style="margin-left:65px">
            <img src=@Model.userLogins[0].ProfilePicture style="width:75px; height:95px; border-radius:50%" />
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #008080; border:none; margin-right:35px"></button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/Student/StudentSettings">Settings</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" onclick="Logout()">Logout</a>
            </div>
        </div>
    </div>
</nav>
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-lg-8 col-md-8 col-sm-12">
            <br />
            <div class="card" style="background-color: white; height:550px">
                <div class="card-header" style="background-color:#008080">
                    <h1 class="text-center" style="color:white">Security</h1>
                </div>
                <br />
                <div class="card-body">
                    <form>
                        <h3 class="text-center">Change Password</h3>
                        <div class="row">
                            <div class="col-12 mt-3">
                                <div>
                                    <label>Current Password:</label>
                                </div>
                                <input id="CurrentPassword" type="password" style="width:100%; border-radius:5px" ; />
                            </div>
                            <div class="col-12 mt-3">
                                <div>
                                    <label>New Password:</label>
                                </div>
                                <input id="NewPassword" type="password" style="width:100%; border-radius:5px" ; />
                            </div>
                            <div class="col-12 mt-3">
                                <div>
                                    <label>Confirm Password:</label>
                                </div>
                                <input id="ConfirmPassword" type="password" style="width:100%; border-radius:5px" ; />
                            </div>
                        </div>
                        <br />
                        <br />
                        <button class="editbtn mt-2" onclick="EditStudentSecurity()" style="display:block; margin-left:auto; margin-right:auto;">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#nav").click(function () {

            $("#navbarText").slideToggle();

        });
    });
</script>