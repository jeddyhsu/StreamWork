@{Layout = "_LayoutChat";}
@{ViewData["Title"] = "StreamWorkChat";}
@model StreamWork.ViewModels.ChatViewModel

<script>
    JoinChatRoom('@Model.ChatId')
</script>

<section>
    <div class="container-fluid p-0">
        <div class="row" style="position:fixed; height:100%; width:103%; overflow:scroll">
            <div class="col-12 p-0">
                <div class="card" style="border-bottom-left-radius:0px; border-bottom-right-radius:0px; width:100%; height:100%;border:none; background-color:whitesmoke">
                    <div class="card-title text-center" style="font-family:'Roboto Slab', serif; font-size:22px">Chat</div>
                    <div class="card-body" style="max-height:90%; overflow:scroll">
                        <div class="row">
                            <div class="m-3" id="chat" style="width:97%">
                                <div class="col-12">
                                    <ul style="overflow:scroll" id="chatField" class="list-group">
                                        @foreach (var chat in Model.Chats)
                                        {
                                            <li class='list-group-item'>@chat.Message</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="questionBox">
                        <div class="card" style=" background-color:whitesmoke; border:none; height:100%">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-11 col-md-11 col-sm-10 col-10">
                                        <input id="regularQuestions" class="form-control" placeholder="Send message" />
                                        <div>
                                            <input style="display:none" id="equationQuestions" class="form-control" placeholder="Send equation" />
                                            <p style="display:none"><span id="latex"></span></p>
