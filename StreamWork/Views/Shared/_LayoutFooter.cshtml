<body style="font-family:'Roboto'; background-color:white">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg pl-0 pr-0 navbar-light" style="background-color:white;">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" id="nav" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="width:20px"></span>
                </button>
            </div>

            <img class="d-lg-none d-sm-block p-0" src="~/images/streamworkPencil.png" onclick="window.location.href='/'" style="height:60px; margin-left:auto; margin-right:auto; cursor:p" />

            @if (@Model.UserProfile == null)
            {
                <img class="d-lg-none d-sm-block p-0" onclick="OpenLoginSignUpModal()" src="https://img.icons8.com/ios-glyphs/100/000000/person-male.png" style="margin-right:0px; height:30px; cursor:pointer; " />
            }
            else
            {
                <ul class="navbar-nav d-lg-none d-sm-block" style="float: none; margin:0px; display: block; text-align: right;">
                    <li>
                        <div class="btn-group">
                            <input type="image" onclick="OpenLogoutModal()" src=@Model.UserProfile.ProfilePicture style="width:32px; height:43px; border-radius:10px" />
                        </div>
                    </li>
                </ul>
            }

            <div class="collapse navbar-collapse" id="navbarText">
                <div class="col-lg-5">
                    <ul class="navbar-nav text-center">
                        <li class="nav-item ml-3" style="font-size:17px;">
                            <a class="nav-link underline" href="/Home/BecomeTutor" style="color:#008080;"><b>Tutor</b></a>
                        </li>
                        <li class="nav-item ml-3" style="font-size:17px;">
                            <a class="nav-link underline" href="/Home/Search" style="color:#008080;"><b>Browse</b></a>
                        </li>
                        <li class="nav-item ml-3" style="font-size:17px;">
                            <a class="nav-link underline" href="/Home/About" style="color:#008080;"><b>About</b></a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <ul class="nav navbar-nav d-lg-none">
                        <li style="font-size:17px;">
                            <a class="nav-link underline ml-3 text-center" href="/" style="color:#008080"><b>Home</b></a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav d-none d-lg-block" style="float: none; margin: 0 auto; display: block; text-align: center;">
                        <li style="display: inline-block; float: none;">
                            <img src="~/images/streamworklogo.png" height="50" onclick="window.location.href='/'" onmouseover="" style="cursor: pointer;" />
                        </li>
                    </ul>
                </div>

                <div class="col-lg-5">
                    @if (@Model.UserProfile == null)
                    {
                        <ul class="nav navbar-nav d-none d-lg-block" style="float: none; margin: 0 auto; display: block; text-align: right;">
                            <li class="nav-item mt-1" style="display: inline-block; float: none;">
                                <a class="btn ml-4" style="color:#008080; font-size:17px; background-color:whitesmoke" onclick="window.location.href='/Home/PickStudentOrTutor'"><b>Sign Up</b></a>
                            </li>
                            <li class="nav-item mt-1" style="display: inline-block; float: none;">
                                <a class="btn" style="background-color:#006565; font-size:17px; color:white" ; onclick="window.location.href='/Home/Login?dest=-Home-Profile'"><b>Login</b></a>
                            </li>
                        </ul>
                    }
                    else if (Model.UserProfile != null)
                    {

                        <ul class="navbar-nav d-none d-lg-block" style="float: none; margin: 0 auto; display: block; text-align: right;">
                            <li>
                                <div class="btn-group" style="position:relative; left:2%;">
                                    <input type="image" data-toggle="dropdown" src=@Model.UserProfile.ProfilePicture style="width:60px; height:100%; border-top-left-radius:5%; border-bottom-left-radius:5%; border-top-right-radius:0%; border-bottom-right-radius:0%" />
                                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:#006060; border:none;"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#" id="EditProfile" onclick="Dashboard('@Model.UserProfile.ProfileType')">Dashboard</a>
                                        <div class="dropdown-divider"></div>
                                        @if (Model.UserProfile.ProfileType == "tutor")
                                        {
                                            <a class="dropdown-item" href="#" id="Settings" onclick="window.location.href='/Tutor/TutorSettings'">Settings</a>
                                        }
                                        else
                                        {
                                            <a class="dropdown-item" href="#" id="Settings" onclick="window.location.href='/Student/StudentSettings'">Settings</a>
                                        }
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#" onclick="Logout()">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>

                    }
                </div>
            </div>
        </nav>
    </div>

    <div id="loginSignUpModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: whitesmoke">
                <div class="modal-body">
                    <a class="btn ml-4" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" onclick="window.location.href='/Home/PickStudentOrTutor'"><b>Sign Up</b></a>
                    <a class="btn " style="background-color:#006565; font-size:17px; color:white; display:block; margin-left:auto; margin-right:auto" ; onclick="window.location.href='/Home/Login?dest=-Home-Profile'"><b>Login</b></a>
                </div>
            </div>
        </div>
    </div>

    @if (@Model.UserProfile != null)
    {
        <div id="logoutModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="background-color: whitesmoke">
                    <div class="modal-body">
                        <a class="btn ml-3" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" onclick="Dashboard('@Model.UserProfile.ProfileType')"><b>Dashboard</b></a>
                        <a class="btn ml-3" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" onclick="Logout()"><b>Logout</b></a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="page-body">
        @RenderBody()
    </div>
    <div class="page-footer my-0" style="text-align: left;">
        <div class="container-fluid pb-5" style="background-color:#008080; height:100%; color:white">
            <div class="row pb-5 pt-4">
                <div class="col-lg-1"></div>
                <div class="col-lg-3">
                    <img class="mt-3 mb-3" src="~/images/WhiteStreamWork.png" height="50" onclick="window.location.href='/'" onmouseover="" style="cursor: pointer;" />
                    <p>StreamWork is an online tutoring center that brings the minds of students together, building upon each other’s knowledge to reach scholastic success. 📚👩🏽‍🎓✨<br /><br />Study smarter, not harder. Get schooled with StreamWork.</p>
                    <button class="btn btn-info" style="color: white;" onclick="window.location.href='/Home/About'">Learn More</button>
                </div>
                <div class="col-lg-1"></div>
                <div class="col-lg-6 mr-5">
                    <div class="row">
                        <div class="col-md-3">
                            <h5 class="mt-4 mb-3" style="font-weight: bold;">StreamWork</h5>
                            <a href="/Home/About" style="color: white;">About Us</a><br />
                            <a href="/Home/PickStudentOrTutor" style="color: white;">Sign Up</a><br />
                            <a href="/Home/Login" style="color: white;">Login</a>
                        </div>
                        <div class="col-md-3">
                            <h5 class="mt-4 mb-3" style="font-weight: bold;">StreamTutors</h5>
                            <a href="/Home/BecomeTutor" style="color: white;">Become a StreamTutor</a><br />
                            <a href="/Home/HowToStream" style="color: white;">How to Stream</a>
                        </div>
                        <div class="col-md-3">
                            <h5 class="mt-4 mb-3" style="font-weight: bold;">Education</h5>
                            <div class="row">
                                <div class="col-sm-6">
                                    <a href="/Home/Subject?s=Mathematics" style="color: white;">Mathematics</a><br />
                                    <a href="/Home/Subject?s=Science" style="color: white;">Science</a><br />
                                    <a href="/Home/Subject?s=Engineering" style="color: white;">Engineering</a><br />
                                    <a href="/Home/Subject?s=Business" style="color: white;">Business</a><br />
                                </div>
                                <div class="col-sm-6">
                                    <a href="/Home/Subject?s=Law" style="color: white;">Law</a><br />
                                    <a href="/Home/Subject?s=Art" style="color: white;">Art</a><br />
                                    <a href="/Home/Subject?s=Humanities" style="color: white;">Humanities</a><br />
                                    <a href="/Home/Subject?s=Other" style="color: white;">Other</a><br />
                                </div>
                            </div>
                            <br />
                            <a href="/Home/Search" style="color: white;">Browse</a>
                        </div>
                        <div class="col-md-3">
                            <h5 class="mt-4 mb-3" style="font-weight: bold;">Follow Us</h5>
                            <img class="mr-3" src="~/images/facebook.png" style="width: 30px; height: 30px; cursor: pointer;" onclick="window.location.href='https://www.facebook.com/streamwork.live/'" onmouseover="" />
                            <img src="~/images/twitter.png" style="width: 30px; height: 30px; cursor: pointer;" onclick="window.location.href='https://twitter.com/StreamWorkLive'" onmouseover="" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-1"></div>
            </div>
            <br />
            <div style="text-align: center;">
                Copyright © 2020 StreamWork LLC. All rights reserved.
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
