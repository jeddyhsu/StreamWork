<body style="font-family:'Roboto'; background-color:white; height:100%;">
    <div class="container-fluid" style="height:100px">
        <nav class="navbar navbar-expand-lg pl-0 pr-0 navbar-light" style="background-color:white;">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" id="nav" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="width:15px"></span>
                </button>
            </div>

            <a href="/"><img class="d-lg-none d-sm-block p-0" src="~/images/streamworkPencil.png" style="height:60px; margin-left:auto; margin-right:auto;" /></a>

            @if (@Model.StudentUserProfile == null)
            {
                <img class="d-lg-none d-sm-block p-0" onclick="OpenLoginSignUpModal()" src="https://img.icons8.com/ios-glyphs/100/000000/person-male.png" style="margin-right:0px; height:30px; cursor:pointer; " />
            }
            else
            {
                <ul class="navbar-nav d-lg-none d-sm-block" style="float: none; margin:0px; display: block; text-align: right;">
                    <li>
                        <div class="btn-group">
                            <input type="image" onclick="OpenLogoutModal()" src=@Model.StudentUserProfile.ProfilePicture style="width:32px; height:43px; border-radius:10px" />
                        </div>
                    </li>
                </ul>
            }

            <div class="collapse navbar-collapse" id="navbarText">
                <div class="col-lg-5">
                    <ul class="navbar-nav text-center">
                        <li class="nav-item ml-md-0 " style="font-size:17px;">
                            <a class="nav-link underline" href="/Student/ProfileStudent" style="color:#008080;"><b>Dashboard</b></a>
                        </li>
                        <li class="nav-item ml-md-0 ml-lg-3" style="font-size:17px;">
                            <a class="nav-link underline" href="/Student/LiveStreams" style="color:#008080;"><b>Live</b></a>
                        </li>
                        <li class="nav-item ml-md-0 ml-lg-3" style="font-size:17px; ">
                            <a class="nav-link underline" href="/Student/ArchivedStreams" style="color:#008080;"><b>Archived</b></a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <ul class="nav navbar-nav d-lg-none text-center" style="font-size:17px;">
                        <li>
                            <a class="nav-link underline" href="/" style="color:#008080"><b>Home</b></a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav d-none d-lg-block" style="float: none; margin: 0 auto; display: block; text-align: center;">
                        <li style="display: inline-block; float: none;">
                            <a href="/"><img src="~/images/streamworklogo.png" height="50" /></a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-5">
                    @if (@Model.StudentUserProfile == null)
                    {
                        <ul class="nav navbar-nav d-none d-lg-block" style="float: none; margin: 0 auto; display: block; text-align: right;">
                            <li class="nav-item mt-1" style="display: inline-block; float: none;">
                                <a class="btn ml-4" style="color:#008080; font-size:17px; background-color:whitesmoke" href="/Home/PickStudentOrTutor"><b>Sign Up</b></a>
                            </li>
                            <li class="nav-item mt-1" style="display: inline-block; float: none;">
                                <a class="btn" style="background-color:#006565; font-size:17px; color:white" ; href="/Home/Login?dest=-Home-Profile"><b>Login</b></a>
                            </li>
                        </ul>
                    }
                    else if (Model.StudentUserProfile != null)
                    {
                        <ul class="navbar-nav d-none d-lg-block" style="float: none; margin: 0 auto; display: block; text-align: right;">
                            <li>
                                <div class="btn-group" style="position:relative; left:2%;">
                                    <input type="image" data-toggle="dropdown" src=@Model.StudentUserProfile.ProfilePicture style="width:60px; height:76px; border-top-left-radius:5%; border-bottom-left-radius:5%; border-top-right-radius:0%; border-bottom-right-radius:0%" />
                                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:#006060; border:none;"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#" id="EditProfile" onclick="Dashboard('@Model.StudentUserProfile.ProfileType')">Dashboard</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" id="Settings" href="/Student/StudentSettings">Settings</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#" onclick="Logout()">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </div>

    @*Edit Modal for editing profile*@
    <div id="editModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: whitesmoke">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:black">Edit Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <input align="middle" type="text" class="form-control" id="ProfileCaption" maxlength="50" placeholder="Field of Study" value="@Model.StudentUserProfile.ProfileCaption" />
                        <br />
                        <textarea align="middle" type="text" class="form-control" id="ProfileParagraph" maxlength="189" placeholder="About Me" style="height:100px">@Model.StudentUserProfile.ProfileParagraph</textarea>
                        <div class="row mt-4">
                            <div class="col-lg-8 col-md-8 col-sm-8 col-6">
                                <div class="upload-uploadbtn-wrapper">
                                    <button class="form-control"><span><img src="/images/Upload16.png"></span> Upload Profile Picture</button>
                                    <input id="uploadProfilePic" style="cursor:pointer" type='file' onchange="readURL(this,'ProfilePic')" />
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-6">
                                <img id="previewProfilePic" src=@Model.StudentUserProfile.ProfilePicture alt="your image" style="border-radius: 5%; width:115px; display:block;margin-left:auto;margin-right:auto" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="streamWorkGrey" data-dismiss="modal">Close</button>
                    <button class="streamWorkPrimary" style="background-color:black; color:white" onclick="RegisterProfilePhotoAndCaption()">Save</button>
                </div>
            </div>
        </div>
    </div>

    @*Login/Sign Up Modal For Mobile View*@
    <div id="loginSignUpModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: whitesmoke">
                <div class="modal-body">
                    <a class="btn ml-4" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" href="/Home/PickStudentOrTutor"><b>Sign Up</b></a>
                    <a class="btn " style="background-color:#006565; font-size:17px; color:white; display:block; margin-left:auto; margin-right:auto" ; href="/Home/Login?dest=-Home-Profile"><b>Login</b></a>
                </div>
            </div>
        </div>
    </div>

    @*Logout Modal For Mobile View*@
    <div id="logoutModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color: whitesmoke">
                <div class="modal-body">
                    <a class="btn ml-3" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" onclick="Dashboard('@Model.StudentUserProfile.ProfileType')"><b>Dashboard</b></a>
                    <a class="btn ml-3" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" href="/Tutor/StudentSettings"><b>Settings</b></a>
                    <a class="btn ml-3" style="color:#008080; font-size:17px; background-color:whitesmoke; display:block; margin-left:auto; margin-right:auto" onclick="Logout()"><b>Logout</b></a>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
