@page "{tutor}"
@model StreamWork.Pages.Profiles.Tutor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@if (Model.CurrentUserProfile == null)
{
    { Layout = "Home/_LayoutHome"; }
}
else if (Model.CurrentUserProfile.ProfileType == "tutor")
{
    { Layout = "Tutor/_LayoutTutor"; }
}
else
{
    { Layout = "Student/_LayoutStudent"; }
}
@Html.AntiForgeryToken()

<div class="container">
    <img class="banner" id="preview-profile-banner" src="@Model.UserProfile.ProfileBanner" />
    <div class="card border-0">
        <div class="card-body p-0 ">
            @await Html.PartialAsync("Partials/Profile/Header_View", Model)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-4 order-lg-1 order-md-1 order-sm-2 order-2 pt-3">
            @if (Model.UserChannel.StreamTitle != null && Model.UserChannel.StreamTitle != "")
            {
                <p class="form-header pt-3" style="font-size:16px">Live</p>
                <div class="card mt-3 border-0 d-block mr-auto ml-auto" style="border-bottom-left-radius:20px; border-bottom-right-radius:20px; border-top-left-radius:20px; border-top-right-radius:20px;">
                    <div class="card-title">
                        <a href="/Stream/Live/@Model.UserChannel.Username"><img id="stream-thumbnail-@Model.UserChannel.StreamThumbnail" style="width:100%; height:100%; border-top-left-radius:20px; border-top-right-radius:20px;" src="@Model.UserChannel.StreamThumbnail" ></a>
                    </div>
                    <div class="card-body pt-0 pb-1">
                        <h5 id="stream-title-@Model.UserChannel.Id" class="text-truncate form-header">@Model.UserChannel.StreamTitle</h5>
                        <p class="text-truncate form-header" style="font-size:10px">@Model.UserProfile.Name.Replace('|', ' ')</p>
                    </div>
                    <div class="card-footer" style="background-color:@Model.LatestStream.StreamColor; border-bottom-left-radius:20px; border-bottom-right-radius:20px;"></div>
                </div>

            }
            else if (Model.LatestStream != null)
            {
                <p class="form-header pt-3" style="font-size:16px">Most Recent Stream</p>
                <div class="card mt-3 border-0 d-block mr-auto ml-auto" style="border-bottom-left-radius:20px; border-bottom-right-radius:20px; border-top-left-radius:20px; border-top-right-radius:20px;">
                    <div class="card-title">
                        <a href="/Stream/Archive/@Model.LatestStream.StreamID/32169"><img id="stream-thumbnail-@Model.LatestStream.Id" style="width:100%; height:100%; border-top-left-radius:20px; border-top-right-radius:20px;" src="@Model.LatestStream.StreamThumbnail"></a>
                    </div>
                    <div class="card-body pt-0 pb-1">
                        <h5 id="stream-title-@Model.LatestStream.Id" class="text-truncate form-header">@Model.LatestStream.StreamTitle</h5>
                        <input id="stream-description-@Model.LatestStream.Id" type="hidden" value="@Model.LatestStream.StreamDescription" />
                        <p class="text-truncate form-header" style="font-size:10px">@Model.UserProfile.Name.Replace('|', ' ')</p>
                    </div>
                    <div class="card-footer" style="background-color:@Model.LatestStream.StreamColor; border-bottom-left-radius:20px; border-bottom-right-radius:20px;"></div>
                </div>}
            <div class="card mt-3">
                <div class="card-title">
                    <p class="form-header p-3" style="font-size:18px">Social Media Links</p>
                    @await Html.PartialAsync("Partials/Profile/SocialMedia_View", Model)
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-title">
                    <p class="form-header p-3" style="font-size:18px">Academic Experience</p>
                    @await Html.PartialAsync("Partials/Profile/Topics_View", Model)
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-8 order-lg-2 order-md-2 order-sm-1 order-1">
            <ul class="nav nav-tabs pt-3" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active form-header" id="profile-tab" data-toggle="tab" href="#profile" onclick="SliderProfile()">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link form-header" id="schedule-tab" data-toggle="tab" href="#schedule" onclick="SliderSchedule()">Schedule</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link form-header" id="video-tab" data-toggle="tab" href="#video" onclick="SliderStream()">Videos</a>
                </li>
            </ul>

            <div class="slider">
                <div id="slider-object" class="slider-object"></div>
            </div>

            <div class="tab-content">
                <div class="tab-pane active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="container-fluid pt-3" style="width:100%">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <div class="card-title p-3 mb-0">
                                        <p class="form-header d-inline-block mb-0" style="font-size:18px">Basic Information</p>
                                    </div>
                                    @await Html.PartialAsync("Partials/Profile/Sections_View", Model)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="schedule" role="tabpanel" aria-labelledby="schedule-tab">
                    <div class="container-fluid pt-3" style="width:100%">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-title p-3 mb-0 form-header" style="font-size:18px">Stream Schedule</div>
                                    @await Html.PartialAsync("Partials/Profile/Schedule_View", Model)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="video" role="tabpanel" aria-labelledby="video-tab">
                    <div class="container-fluid pt-3" style="width:100%">
                        <div class="row p-3">
                            <div class="col-12">
                                <div class="d-flex">
                                    <form id="search-form" class="p-1 border w-100 rounded d-inline-block custom-form" onkeyup="SearchStreams(event, '@Model.UserProfile.Username')" onsubmit="SearchStreams(event, '@Model.UserProfile.Username')">
                                        <div class="d-flex">
                                            <input class="mt-1 ml-2" type="image" src="~/images/GenericAssets/Search.svg" width="30" height="40" />
                                            <input id="searchQuery" class="form-control-lg mt-1" type="search" placeholder="Search Videos" style="border: none; font-size:14px;">
                                            <select id="filter" name="filter" class="form-control form-control-sm rounded m-2 h-100 float-right" onchange="SearchStreams(event, '@Model.UserProfile.Username')" style="max-width:175px;">
                                                <option value="">Filter Topic</option>
                                                <option value="Mathematics">Mathematics</option>
                                                <option value="Science">Science</option>
                                                <option value="Engineering">Engineering</option>
                                                <option value="Business">Business</option>
                                                <option value="Law">Law</option>
                                                <option value="Art">Art</option>
                                                <option value="Humanities">Humanities</option>
                                                <option value="Other">Others</option>
                                            </select>
                                        </div>
                                    </form>
                                </div>
                                <p id="clear-filter" class="float-right mr-4 mb-0 pointer mt-2" style="font-size:12px; color:#004643" onclick="ClearFilter(event, '@Model.UserProfile.Username')">Clear Filter</p>
                                <script>$('#clear-filter').hide();</script>
                            </div>
                        </div>
                        <div class="divider"></div>
                        @await Html.PartialAsync("Partials/Profile/Stream_View", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("Partials/Modals/ProfileModal")
@await Html.PartialAsync("Partials/Notification/PushNotifications")