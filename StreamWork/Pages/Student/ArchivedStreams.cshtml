@model StreamWork.ViewModels.Student.ProfileStudentViewModel

@{Layout = "_LayoutStudentNavbar";}
@{ViewData["Title"] = "Archived Streams";}

<script src="~/js/Student.js"></script>
<link rel="stylesheet" href="~/css/Student.css" />

<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10 col-md-12 col-sm-12">
            <form class="p-2" onsubmit="return searchArchives();" style="background-color: white; border-radius: 6px; box-shadow: 0px 0px 30px -10px">
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-sm-12">
                        <div>
                            <input id="searchQuery" class="form-control form-control-lg mt-2 mb-2" type="search" placeholder="🔎 Homework topic..." style="border: none;">
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 col-sm-12">
                        <select id="searchSubject" class="custom-select mt-2 mb-2" style="background-color: #006060; height:46px; color: white; font-size: 85%; font-weight: bold;">
                            <option value="Any">All Subjects</option>
                            <option value="Mathematics">Mathematics</option>
                            <option value="Science">Science</option>
                            <option value="Engineering">Engineering</option>
                            <option value="Business">Business</option>
                            <option value="Law">Law</option>
                            <option value="Art">Art</option>
                            <option value="Humanities">Humanities</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-12">
                        <button class="btn btn-lg mt-2 mb-2" type="submit" style="color: white; background-color:#006060; height:46px; width:100px;margin-left:auto; margin-right:auto; display:block">
                            <div>
                                <div style="font-size: 70%; font-weight: bold;">Search</div>
                            </div>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="container">
    <h2 class="text-center" style="font-family:'Roboto Slab', serif"><b>Archived Streams</b><span class="ml-2"><img id="info" src="~/images/info_icon.png" style="width: 24px; height: 24px; margin-top: -5px;" data-toggle="tooltip" data-placement="right" title="Watch all the previously archived livestreams here. It's free!" /></span></h2>
    <div class="row">
        @if (Model.ArchivedStreams.Count > 0)
        {
            @foreach (var videoInfo in Model.ArchivedStreams)
            {
                <div class="col-lg-4 col-md-6 col-sm-6 streamsubject @videoInfo.StreamSubject">
                    <div class="card mt-3" style="border:none; background-color:transparent">
                        <a href="../StreamViews/StreamPlaybackPage?streamId=@videoInfo.StreamID">
                            <img style="width:100%; height:100%; border-top-left-radius:10px; border-top-right-radius:10px; border-bottom-left-radius:0px; border-bottom-right-radius:0px;" src=@videoInfo.StreamThumbnail>
                        </a>
                        <a class="card-body p-0" style="background-color:black; border-bottom-left-radius:10px; border-bottom-right-radius:10px;" href="/Home/ProfileView?Tutor=@videoInfo.Username">
                            <div class="row">
                                <div class="col-12">
                                    <input type="image" style="border-radius:5%; width:50px; margin-left:10px; margin-top:10px; margin-bottom:10px; height:60px; float:left" src=@videoInfo.ProfilePicture />
                                    <h5 class="text-truncate" style="font-family: 'Roboto'; font-size:15px; color:white; margin-left:80px; margin-top:10px;">@videoInfo.StreamTitle</h5>
                                    <h6 class="text-truncate" style="font-family: 'Roboto'; font-size:14px; color:white; margin-left:80px;">@videoInfo.Username</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12" style="text-align: center;">
                <br />
                <br />
                <h4>No results were found for your query.</h4>
            </div>
        }
    </div>
</div>

<div id="editModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #008080">
            <div class="modal-header">
                <h5 class="modal-title" style="color:white">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input align="middle" type="text" class="form-control" id="ProfileCaption" placeholder="Caption" value="@Model.StudentUserProfile.ProfileCaption" />
                    <br />
                    <textarea align="middle" type="text" class="form-control" id="ProfileParagraph" placeholder="About Me" style="height: 100px">@Model.StudentUserProfile.ProfileParagraph</textarea>
                    <br />
                    <img id="previewProfilePic" src=@Model.StudentUserProfile.ProfilePicture alt="your image" style="border-radius: 50%; width: 115px; height: 150px; display: block;margin-left: auto;margin-right: auto" />
                    <br />
                    <div class="upload-uploadbtn-wrapper">
                        <button class="uploadbtn" style="margin-left:110px">Upload a Profile Picture</button>
                        <input id="uploadProfilePic" type='file' onchange="readURL(this,'ProfilePic');" />
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" style="background-color:black; color:white" class="btn" onclick="RegisterProfilePhotoAndCaption()">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<style>


    .dot {
        height: 10vw;
        width: 10vw;
        background-color: white;
        border-radius: 50%;
        text-align: center;
        color: black
    }

    .sidebar {
        height: 100%;
        width: 30%;
        position: fixed;
        z-index: 1;
        top: 0px;
        bottom: 0px;
        left: 0;
        overflow-y: scroll;
        background-color: #006565;
        overflow-x: hidden;
        color: white;
        text-align: center;
    }

    .file-custom {
        margin: 0;
        padding: 2rem 1.5rem;
        font: 1rem/1.5 "PT Sans", Arial, sans-serif;
        color: #5a5a5a;
    }

    input[type="text"]::placeholder { /* Firefox, Chrome, Opera */
        color: white;
    }
</style>


<script>$(document).ready(function () {

        $("#nav").click(function () {

            $("#navbarText").slideToggle();

        });
    });</script>


